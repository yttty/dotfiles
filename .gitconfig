[core]
	excludesfile = ~/.gitignore
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[user]
	name = yttty
	email = yttty@noreply.com
[push]
	default = simple
[grep]
	extendRegexp = true
	lineNumber = true
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[commit]
	gpgsign = false
	verbose = false
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[help]
	autocorrect = 1
[status]
	showuntrackedfiles = all
[alias]
	aa = add --all
	aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort
	amend = commit --amend
	anw = !sh -c 'git diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'
	ap = add --patch
	b = branch -v
	ca = diff --cached
	co = checkout
	cp = cherry-pick
	cm = commit -m
	cmu = commit -m "update"
	fall = log --all --grep
	find = log --grep
	fmt = clang-format
	hist = log -p -M --follow --stat
	lg = log -p
	ll = log --stat
	patch = show HEAD -U999999
	review = !git diff --name-only --cached | xargs -n 1 git blame --porcelain | grep  \"^author \" | sort | uniq -c | sort -nr | head -10
	sha = rev-parse HEAD
	st = status
	top = log --stat -n 1
	uncommit = reset HEAD~
	undo = reset --soft HEAD^
	unstage = reset HEAD --
[credential]
	helper = /usr/local/bin/git-credential-manager
	helper = cache --timeout=3600
	credentialStore = cache
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[init]
	defaultBranch = main
